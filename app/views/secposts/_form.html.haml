= form_for @secpost do |f|
  - if @secpost.errors.any?
    #error_explanation
      %h2= "#{pluralize(@secpost.errors.count, "error")} prohibited this secpost from being saved:"
      %ul
        - @secpost.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
