= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :firstName
    = f.text_field :firstName
  .field
    = f.label :middleName
    = f.text_field :middleName
  .field
    = f.label :lastName
    = f.text_field :lastName
  .field
    = f.label :login
    = f.text_field :login
  .field
    = f.label :password
    = f.text_field :password
  .actions
    = f.submit t('Save')
