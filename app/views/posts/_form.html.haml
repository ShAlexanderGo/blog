= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :references
    = f.text_field :references
  .field
    = f.label :body
    = f.text_field :body
  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
